<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.database_connectivity.controller.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Student Database Manager" />

    <HBox alignment="CENTER" spacing="10.0">
        <TextField fx:id="nameField" promptText="Name"/>
        <TextField fx:id="emailField" promptText="Email" />
        <TextField fx:id="courseField" promptText="Course" />
    </HBox>

    <HBox alignment="CENTER" spacing="15.0">
        <Button text="Add" onAction="#onAddButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Update" onAction="#onUpdateButtonClick" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Delete" onAction="#onDeleteButtonClick" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
        <Button text="Clear" onAction="#onClearButtonClick" />
    </HBox>

    <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="150.0" text="Name" />
            <TableColumn fx:id="colEmail" prefWidth="200.0" text="Email" />
            <TableColumn fx:id="colCourse" prefWidth="150.0" text="Course" />
        </columns>
    </TableView>
</VBox>